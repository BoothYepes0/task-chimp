<div class="container">
<h1>Completed Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Task name</th>
      <th>Category</th>
      <th>Priority</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Move to My To-Do List</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr id="task_<%= task.id %>">
        <td><%= task.task_name %></td>
        <td><%= task.category %></td>
        <td><%= task.priority %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Move to My To-Do List', task_completion_task_path(task, status: false), method: :patch, class: "dropdown-item", remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
</div>