<p id="notice"><%= notice %></p>

<div class="container">
<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Completed</th>
      <th>Task name</th>
      <th>Category</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.user_id %></td>
        <td><%= task.completed %></td>
        <td><%= task.task_name %></td>
        <td><%= task.category %></td>
        <td><%= task.priority %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
</div>