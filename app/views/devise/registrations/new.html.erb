<div class: 'container'>
<h2>Register</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class: 'form-group'>
    <div class="from-group">
      <%= f.input :first_name, input_html: {class: "form-control"}, required: true %>
    </div>
    <div class="from-group">
      <%= f.input :last_name, input_html: {class: "form-control"}, required: true %>
    </div>
    <div class="from-group">
      <%= f.input :username, input_html: {class: "form-control"}, required: true %>
    </div>
    <div class="from-group">
      <%= f.input :email, input_html: {class: "form-control"}, required: true, autofocus: true %>
    </div>
    <div class="from-group">
      <%= f.input :password, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: {class: "form-control", autocomplete: "new-password"}, required: true %>
    </div>
    <div class="from-group">
      <%= f.input :password_confirmation, input_html: {class: "form-control", autocomplete: "new-password"}, required: true %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Register for TaskChimp", class: 'btn btn-success mt-3' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>